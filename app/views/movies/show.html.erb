<div class="bodyred">
<%= link_to ' Back', movies_path, id: "buttonicon", class: "btn btn-primary btn-small fa fa-arrow-circle-o-left fa-2x", style: "color: white"  %>

<%= link_to '', edit_movie_path(@movie), class: "btn btn-warning btn-small fa fa-pencil-square-o", style: "color: white"  %>   


<% if user_signed_in?%>
  <%= link_to "", movie_path(@movie), method: :delete, class:"btn btn-danger btn-small fa fa-trash", style: "color: white" %>
  <% end %>

<br>
<br>

<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-4">
          <%= image_tag @movie.image.url(:medium) %>
          <div class="table-responsive">
            <table class="table">
              <tbody>
                <tr>
                  <td><strong>Title:</strong></td>
                  <td> <%= @movie.title %></td>
                </tr>
                <tr>
                    <td><strong>Description:</strong></td>
                    <td><%= @movie.description %></td>
                </tr>
                <tr>
                    <td><strong>Length:</strong></td>
                    <td><%= @movie.length %></td>
                </tr>
                <tr>
                    <td><strong>Director:</strong></td>
                    <td><%= @movie.director %></td>
                </tr>
                <tr>
                    <td><strong>Rating:</strong></td>
                    <td><%= @movie.rating %></td>
                </tr>
              </tbody>
            </table>
          </div>
      </div>
    </div>
  </div>
</div>
</div>




