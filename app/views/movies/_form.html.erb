
<%= form_for @movie, html: { multipart: true } do |f| %>
  <% if @movie.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@movie.errors.count, "error") %> prohibited this movie from being saved:</h2>

      <ul>
      <% @movie.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field formmargin">
    <%= f.label :image %><br>
    <%= f.file_field :image, class: "btn btn-default" %>
  </div>
<div class="form-group">
  <div class="field formmargin">
    <%= f.label :title %><br>
    <%= f.form_field :title, class: "form-control" %>
  </div>
  <div class="field formmargin">
    <%= f.label :description %><br>
    <%= f.text_area :description, class: "form-control" %>
  </div>
  <div class="formmargin dropdown">
  <% genre = {"Comedy":"Comedy", "Action":"Action", "Horror":"Horror", "Animation":"Animation", "Documentary":"Documentary", "Romance":"Romance", "Drama":"Drama"}  %>
  <%= f.label :genre %>
  <%= f.select :genre, genre, class: "btn btn-default dropdown-toggle" %>
  </div>
  <div class="field formmargin">
    <%= f.label :length %><br>
    <%= f.text_field :length, class: "form-control" %>
  </div>
  <div class="field formmargin">
    <%= f.label :rating %><br>
    <%= f.text_field :rating, class: "form-control" %>
  </div>
  <div class="field formmargin">
    <%= f.label :director %><br>
    <%= f.text_field :director, class: "form-control" %>
  </div>
  <div class="actions formmargin">
    <%= f.submit %>
  </div>
<% end %>
</div>
